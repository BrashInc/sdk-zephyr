/ {
	model = "Nordic Orion nRF9160";
	compatible = "nordic,orion-nrf9160";

	chosen {
		zephyr,console = &uart0;
		zephyr,bt-uart=&uart0;
	};

		gpio_in {
		compatible = "gpio-keys";

		pwr_stat1: 1 {
			gpios = <&gpio0 2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Power Stat 1";
		};
		pwr_stat2: 2 {
			gpios = <&gpio0 5 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Power Stat 2";
		};
		button: 3 {
			gpios = <&gpio0 1 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
			label = "Capacitive Button";
		};
		nfc_fd: 4 {
			gpios = <&gpio0 27 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
			label = "NFC Field Detect";
		};
	};

	gpio_out {
		compatible = "gpio-keys";

		button_en: 1 {
			gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
			label = "Capacitive Button Sync/Enable";
		};
		gnss_en: 2 {
			gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
			label = "GNSS Power On";
		};
		gnss_rst: 3 {
			gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
			label = "GNSS Reset";
		};
		ble_rst: 4 {
			gpios = <&gpio0 18 GPIO_ACTIVE_LOW>;
			label = "BLE Reset";
		};
		batt_en: 5 {
			gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>;
			label = "Battery Enable";
		};
	};

	aliases {
		uart-gnss = &uart1;
		sensor-imu = &bmi160;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&i2c2 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	sda-pin = <26>;
	scl-pin = <30>;
	clock-frequency = <I2C_BITRATE_FAST>;

	bme680@76 {
		compatible = "bosch,bme680";
		label = "BME680";
		reg = <0x76>;
	};

	bh1749@38 {
			compatible = "rohm,bh1749";
			label = "BH1749";
			reg = <0x38>;
			int-gpios = <&gpio0 27 0>;
	};
};

&spi3 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <23>;
	mosi-pin = <22>;
	miso-pin = <24>;
	cs-gpios = <&gpio0 19 GPIO_ACTIVE_LOW>, <&gpio0 25 GPIO_ACTIVE_LOW>;

	bmi160: bmi160@0 {
		compatible = "bosch,bmi160";
		label = "BMI160";
		spi-max-frequency = <4000000>;
		reg = <0>;
		int-gpios = <&gpio0 20 GPIO_ACTIVE_HIGH>;
	};

	w25q80d: w25q80d@1 {
		compatible = "jedec,spi-nor";
		label = "W26Q80D";
		spi-max-frequency = <8000000>;
		reg = <1>;
	};
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	status = "okay";
	tx-pin = <15>;
	rx-pin = <14>;
	rts-pin = <16>;
	cts-pin = <17>;
};

&uart1 {
	compatible = "nordic,nrf-uarte";
	current-speed = <9600>;
	status = "okay";
	tx-pin = <12>;
	rx-pin = <13>;
	rts-pin = <0xFFFFFFFF>;
	cts-pin = <0xFFFFFFFF>;
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x10000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
		};
		slot0_ns_partition: partition@40000 {
			label = "image-0-nonsecure";
		};
		slot1_partition: partition@80000 {
			label = "image-1";
		};
		slot1_ns_partition: partition@b0000 {
			label = "image-1-nonsecure";
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0x000f0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0x000fa000 0x00006000>;
		};
	};
};

/ {

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		sram0_s: image_s@20000000 {
			/* Secure image memory */
		};

		sram0_bsd: image_bsd@20010000 {
			/* BSD (shared) memory */
		};

		sram0_ns: image_ns@20020000 {
			/* Non-Secure image memory */
		};
	};
};

/* Include partition configuration file */
#include "orion_nrf9160_partition_conf.dts"
